@model Stop2ShopPL.Models.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('login').click();
    });
</script>

<ul class="nav navbar-nav navbar-right ml-auto">
    <li class="nav-item">
        <a id="login" data-toggle="dropdown" class="nav-link dropdown-toggle" href="#">Login</a>
        <ul class="dropdown-menu form-wrapper">
            <li>
                @using (Html.BeginForm("LoginValidate", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group ">
                            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2"  })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <input type="submit" class="btn btn-primary btn-block" value="Login">
                        <div class="form-footer">
                            <a href="#">Forgot Your password?</a>
                        </div>
                    </div>
                }
            </li>
        </ul>
    </li>
    <li class="nav-item">
        <a href="#" data-toggle="dropdown" class="btn btn-primary dropdown-toggle get-started-btn mt-1 mb-1">Sign up</a>
        <ul class="dropdown-menu form-wrapper" style="width:650px">
            <li>
                <form action="/examples/actions/confirmation.php" method="post">
                    <p class="hint-text">Fill in this form to create your account!</p>
                    <div class="row">
                        <div class="col-lg-2 form-group">
                            <label> Customer Type</label>
                        </div>
                        <div class="col-lg-3 form-group">
                            <select class="form-control">
                                <option disabled selected value="">-- select -- </option>
                                <option value="Individual">Individual</option>
                                <option value="Supplier">Supplier</option>
                                <option value="Dealer">Dealer</option>
                            </select>
                        </div>
                        <div class="col-lg-1 ">
                        </div>
                        <div class="col-lg-4 ">
                            <input type="checkbox" checked /> Active
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 form-group">
                            <input type="text" class="form-control" placeholder="Full Name" required="required">
                        </div>
                        <div class="col-lg-1 ">
                        </div>
                        <div class="col-lg-5 form-group">
                            <input type="email" class="form-control" placeholder="EmailId" required="required">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 form-group">
                            <input type="tel" class="form-control" placeholder="Phone Number" required="required">
                        </div>
                        <div class="col-lg-1 ">
                        </div>
                        <div class="col-lg-5 form-group">
                            <input type="tel" class="form-control" placeholder="Alt Phone Number" required="required">
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-5 form-group">
                            <input type="text" class="form-control" placeholder="Password" required="required">
                        </div>
                        <div class="col-lg-1 ">
                        </div>
                        <div class="col-lg-5 form-group">
                            <input type="password" class="form-control" placeholder="Confirm Password" required="required">
                        </div>
                    </div>
                    @*<label style="text-align:center">Adress</label>*@
                    <div class="row">
                        <div class="col-lg-5 form-group">
                        </div>
                        <div class="col-lg-2 ">
                            <label style="text-align:center">Address</label>
                        </div>
                        <div class="col-lg-5 form-group">
                        </div>
                    </div>
                    <hr />
                    <div class="row">

                        <div class="col-lg-12 form-group">
                            <input type="text" class="form-control" placeholder="Address Line 1" required="required">
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-12 form-group">
                            <input type="text" class="form-control" placeholder="Address Line 2" required="required">
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-12 form-group">
                            <input type="text" class="form-control" placeholder="Address Line 3" required="required">
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-3 ">
                            <label> City</label>
                        </div>
                        <div class="col-lg-9 form-group">
                            <select class="form-control">
                                <option value="Bangalore">Bangalore</option>
                            </select>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-3 ">
                            <label> State</label>
                        </div>
                        <div class="col-lg-9 form-group">
                            <select class="form-control">
                                <option value="Karnataka">Karnataka</option>
                            </select>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-3 ">
                            <label> Pincode</label>
                        </div>
                        <div class="col-lg-9 form-group">
                            <select class="form-control">
                                <option value="560100">560100</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a href="#">Terms &amp; Conditions</a></label>
                    </div>
                    <input type="submit" class="btn btn-primary btn-block" value="Sign up">
                </form>
            </li>
        </ul>
    </li>
</ul>

